<%= javascript_include_tag "csv_email_validator" %>

<h3>Bulk Email to offer signup</h3>
<span style="color:red">
<%=flash[:notice]%>

  </span>

<%= form_tag({:controller=>"administration/bulk_email",:action => "send_email"}, :onsubmit=>"return validate_email_sent_form();", :method => "post") do %>

<table>
  <tr>
    <td>Attach package:</td>
    <td><%= select_tag :package_id,options_for_select(Administration::MerchantPackage.all.collect { |c| [c.title, c.id] }.insert(0, 'none')) %></td>
  </tr>
  <tr>
    
    <td colspan="2">Email Addresses<br/>
      <%=  text_area_tag(:to, @csv, :size=>"60x6")%></td>
  </tr>
  <tr>
    <td></td>
    <td style="text-align:right"><%= submit_tag("Send") %></td>
  </tr>

</table>
<% end %>
