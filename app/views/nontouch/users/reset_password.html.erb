<p>Please enter new password for your account</p>  
  <div class="error"><%= flash[:error] %></div>
  <%= form_for(:user, :url => {:controller => "/nontouch/users", :action=>"reset_password"}) do |f|-%>
    <div>
      <p>
          <label for="user_password" >Password</label><br/>
          <%= f.password_field :password, :size => 45, :class => 'text' %>
      </p>
      <p>
          <label for="user_password_confirmation" >Confirm Password</label><br/>
          <%= f.password_field :password_confirmation, :size => 45, :class => 'text' %>
       </p>
            
    </div>
      <%= submit_tag "Reset your password" %>
  <%=f.hidden_field "password_reset_code",:value=>params[:password_reset_code] %>
  <% end -%>  
<%= link_to "Login",:controller => :sessions, :action => :new %>
